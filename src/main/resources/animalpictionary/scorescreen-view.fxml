<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="500.0" prefWidth="480.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="animalpictionary.AnimalPictionaryController">
   <children>
      <Label layoutX="16.0" layoutY="47.0" text="Score Board">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <MenuBar prefHeight="28.0" prefWidth="480.0">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#onRestartItemClick" text="Restart" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Quit">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#onExitGameItemClick" text="Exit Game" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Main Window">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#onAnimalPictionaryClick" text="Animal Pictionary" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <Label layoutX="23.0" layoutY="99.0" text="Name: " />
      <Label layoutX="23.0" layoutY="141.0" text="Score: " />
      <Label layoutX="22.0" layoutY="184.0" text="Current Rank: " />
      <TextField fx:id="txtName" layoutX="77.0" layoutY="95.0" />
      <TextField fx:id="txtScoreB" layoutX="77.0" layoutY="137.0" />
      <TextField fx:id="txtCurrentRank" layoutX="106.0" layoutY="180.0" prefHeight="26.0" prefWidth="131.0" />
      <ImageView fx:id="imageView" fitHeight="203.0" fitWidth="203.0" layoutX="252.0" layoutY="158.0" pickOnBounds="true" preserveRatio="true" />
      <TextArea fx:id="txtAreaInput" layoutX="22.0" layoutY="259.0" prefHeight="220.0" prefWidth="215.0" />
      <Button layoutX="22.0" layoutY="224.0" mnemonicParsing="false" onAction="#onButtonInputClick" text="Input Information" />
   </children>
</AnchorPane>
